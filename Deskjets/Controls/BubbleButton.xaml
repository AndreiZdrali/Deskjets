<UserControl x:Class="Deskjets.Controls.BubbleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deskjets.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             Loaded="UserControl_Loaded">
    <!--sa fac binding pentru culoare-->
    <Border x:Name="bubbleBorder" Height="50" Width="50"
            CornerRadius="25" Background="{Binding Path=Color}"
            Opacity="0.8">
        <Image x:Name="buttonIcon" Height="32" Width="32"/>
    </Border>
</UserControl>
